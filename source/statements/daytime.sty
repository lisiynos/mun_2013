\begingroup
    \count0=\time
    \count1=\count0
    \divide\count0 by 60
    \count2=\count0
    \multiply\count0 by 60
    \advance\count1 by -\count0
    \xdef\daytime{%
         \ifnum\count2<10 0\fi \the\count2:%
         \ifnum\count1<10 0\fi \the\count1
    }%
    \xdef\Daytime{%                          %GDG
         \the\count2:%                       %GDG
         \ifnum\count1<10 0\fi \the\count1   %GDG
    }%                                       %GDG
\endgroup
